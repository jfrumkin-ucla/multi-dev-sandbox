{#
/**
 * @file
 * Theme override for a menu block in the footer.
 *
 * Available variables:
 * - Look in the block.html.twig file for available variables.
 */
#}
{% set attributes = attributes.addClass('footer-nav') %}
{% set title_attributes = title_attributes.addClass('footer-nav__title') %}
{% set heading_id = attributes.id ~ '-menu'|clean_id %}
<nav role="navigation" aria-labelledby="{{ heading_id }}"{{ attributes|without('role', 'aria-labelledby') }}>
  {# Label. If not displayed, we still provide it for screen readers. #}
  {% if not configuration.label_display %}
    {% set title_attributes = title_attributes.addClass('visually-hidden') %}
  {% endif %}
  {{ title_prefix }}
  <p{{ title_attributes.setAttribute('id', heading_id) }}>{{ configuration.label }}</p>
  {{ title_suffix }}

  {# Menu. #}
  {% block content %}
    {{ content }}
  {% endblock %}
</nav>