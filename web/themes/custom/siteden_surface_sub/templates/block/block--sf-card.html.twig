{% extends "block.html.twig" %}
{#
/**
 * @file
 * Theme override for a Card block.
 *
 * Available variables:
 * - Look in the block.html.twig file for available variables.
 */
#}

{% set card_classes = [
  configuration.block_styles.card_type.card_type ? 'card--bg-' ~ configuration.block_styles.card_type.card_type : '',
  configuration.block_styles.card_type.card_accent ? 'card--accent' : ''
] %}

{% set block_title_classes = [
  class_panel ? 'panel__title',
  remove_vertical_heading_bar ? 'panel__title--plain'
] %}
{% set title_attributes = title_attributes.addClass(block_title_classes) %}

{% block content %}
  {% include '@siteden-components/card.html.twig' with
    {
      title: content.field_sf_title.0,
      link: {
      title: content.field_sf_card_link.0['#title'],
      url: content.field_sf_card_link.0['#url']
    },
      image: content.field_sf_card_image.0,
      text: content.body,
      card_classes: card_classes
    } %}
{% endblock %}
