<article{{ attributes.addClass(classes) }}>
  {% if media %}
    <div class="article__media">
      {% if is_featured %}
        <div class="featured-flag">Featured</div>
      {% endif %}
      {{ media }}
    </div>
  {% endif %}

  <div class="article__info">
    <div class="article__title">
      {% if url %}
        <a href="{{ url }}">{{ title }}</a>
      {% else %}
        {{ title }}
      {% endif %}
    </div>

    {% if summary %}
      <div class="article__summary">
        {{ summary }}
      </div>
    {% endif %}

    {% if date or byline or category %}
      <div class="article__meta">
        <ul>
          {% if date %}
            <li>{{ date }}</li>
          {% endif %}
          {% if byline %}
            <li>{{ byline }}</li>
          {% endif %}
          {% if category %}
             <li class="{{ category_class }}"><a class="category-brand__term" href="{{ category['#url'] }}">{{ category['#title'] }}</a></li>
          {% endif %}
        </ul>
      </div>
    {% endif %}
  </div>

{#  {% if extra_content %}#}
{#    {{ extra_content }}#}
{#  {% endif %}#}

{#  {{ tags }}#}
</article>
