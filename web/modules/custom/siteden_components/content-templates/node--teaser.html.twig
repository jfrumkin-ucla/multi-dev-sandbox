<article{{ attributes.addClass(classes) }}>
  {% if media.0 %}
    <div class="node-general__media">
      {% if is_featured %}
        <div class="featured-flag">Featured</div>
      {% endif %}
      {{ media }}
    </div>
  {% endif %}

  <div class="node-general__info">
    <div class="node-general__title">
      {% if url %}
        <h3><a href="{{ url }}">{{ title }}</a></h3>
      {% else %}
        <h3>{{ title }}</h3>
      {% endif %}
    </div>

    {% if extra_content %}
      {{ extra_content }}
    {% endif %}
  </div>
</article>
