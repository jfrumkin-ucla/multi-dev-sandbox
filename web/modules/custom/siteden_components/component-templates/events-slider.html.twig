                {% if pos == 11 %}
                  {% set regionClass = 'layout__region--second' %}
                {% endif %}
                <div class="layout__region {{ regionClass }} slider-item slider-item--image-background-slider-heading col-sm-3">

                  <article>
                    {% if slideritem.image %}
                      <div class="event__media">
                        {{ slideritem.image }}
                      </div>
                    {% endif %}
                    {% if slideritem.date or slideritem.time or slideritem.location %}
                      <div class="featured-event-content-container">
                        <div class="featured-event-date">
                          <div class="fleft full-width event-month">{{ slideritem.month }}</div>
                          <div class="fleft full-width event-day">{{ slideritem.date }}</div>
                        </div>
                        <div class="featured-event-content">
                          <div class="event-title"><a href="{{ slideritem.url }}">{{ slideritem.title }}</a></div>
                          <ul>
                            {% if slideritem.time %}
