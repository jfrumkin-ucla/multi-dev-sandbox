                          {% if slideritem.location %}
                            <div class="icon icon--location">{{ slideritem.location }}</div>
                          {% endif %}
                          <div class="article-event-summary">
                            {% autoescape false %}
                              {{ slideritem.body }}
                            {% endautoescape %}
                          </div>
                        </div>
                      </div>
                    {% endif %}
